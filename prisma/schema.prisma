generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum Region {
  INDIA
  US
}

enum NavbarItemType {
  LINK
  DROPDOWN
  BUTTON
}

enum ContentStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum PageKey {
  HOME
  ABOUT
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  contact       String?   // phone number or contact info
  emailVerified DateTime?
  image         String?
  passwordHash  String
  role          Role      @default(USER)
  region        Region?   // preferred region for quick filtering in admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model NavbarItem {
  id          String          @id @default(cuid())
  label       String
  href        String?
  order       Int             @default(0)
  type        NavbarItemType  @default(LINK)
  isLoginLink Boolean         @default(false)
  isActive    Boolean         @default(true)
  region      Region          @default(INDIA)
  parentId    String?
  groupLabel  String?         // For grouping submenu items (e.g., "Company Registration", "Compliance and Licensing")
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  parent   NavbarItem? @relation("NavbarHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children NavbarItem[] @relation("NavbarHierarchy")

  @@unique([region, label], map: "NavbarItem_region_label_unique")
  @@index([region, parentId, order])
}

model Blog {
  id           String        @id @default(cuid())
  title        String
  slug         String
  excerpt      String?
  coverImage   String?
  tags         String[]
  content      Json
  seoMeta      Json?
  region       Region        @default(INDIA)
  status       ContentStatus @default(DRAFT)
  publishedAt  DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([slug, region])
  @@index([region, status])
}

model StaticPage {
  id          String        @id @default(cuid())
  key         PageKey
  region      Region        @default(INDIA)
  title       String
  heroImage   String?
  content     Json
  seoMeta     Json?
  publishedAt DateTime?
  status      ContentStatus @default(DRAFT)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([key, region])
}

model MediaAsset {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  mimeType  String
  width     Int?
  height    Int?
  region    Region    @default(INDIA)
  uploadedBy String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model PageHero {
  id          String   @id @default(cuid())
  navbarItemId String  @unique // Links to NavbarItem via href
  region      Region   @default(INDIA)
  title       String
  subtitle    String?
  description String?
  content     Json     // Flexible JSON for region-specific content (benefits, CTAs, etc.)
  status      ContentStatus @default(DRAFT)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([navbarItemId, region])
  @@index([region, status])
}